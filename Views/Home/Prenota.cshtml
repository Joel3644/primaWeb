@model Prenotazione;

@{
    ViewData["Title"] = "Prenota";
}

@{
    //fiddler http sniffer serve per vedere tutto ci√≤ che succede in http
    //fiddler classic
}

<div class="text-center">
    <h1 class="display-4">Prenota</h1>
    <form class="m-2" method="post" asp-action="Prenota">
        <div class="form-group">
            <label asp-for="Nome">Il tuo nome:</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">La tua email:</label>
            <input asp-for="Email" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>
    @if(Model != null){
        <p>@Model.Nome, @Model.Email</p>
    }
</div>